            </ul>
        </nav>
    </header>
    <main>
        <h2>Préstamos</h2>
        <button id="btnScan">Escanear código</button>
    <div id="reader" style="width: 500px;"></div>
    <script>
        document.getElementById('btnScan').addEventListener('click', function () {
            const html5QrCode = new Html5Qrcode("reader");
            html5QrCode.start(
                { facingMode: "environment" }, // Use rear camera
                {
                    fps: 10,    // frames per second
                    qrbox: { width: 250, height: 250 }  // scanning box size
                },
                qrCodeMessage => {
                    console.log(`Code scanned: ${qrCodeMessage}`);
                    // Aquí puedes enviar qrCodeMessage al backend si es necesario
                },
                errorMessage => {
                    console.log(`Error scanning: ${errorMessage}`);
                }
            ).catch(err => {
                console.log(`Unable to start scanning: ${err}`);
            });
        });
    </script>
